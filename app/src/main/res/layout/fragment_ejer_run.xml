<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EjerRun"
    android:id="@id/ejerRun"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="352dp"
            android:layout_height="554dp"
            android:layout_margin="12dp"
            android:background="@color/white"
            app:cardCornerRadius="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/btn_ejerRun_comenzar"
                    android:layout_width="180dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Comenzar"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/btn_ejerrun_deneter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.416" />

                <Button
                    android:id="@+id/btn_ejerrun_deneter"
                    android:layout_width="151dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Detener"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.416" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/iv_ejedesc"
                    android:layout_width="351dp"
                    android:layout_height="169dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/ejer_cadera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fechaAgua"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="MissingClass" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="55dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="44dp"
                    android:src="@drawable/clock"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ejerun_repeticiones"
                    app:layout_constraintHorizontal_bias="0.877"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ejedesc"
                    app:layout_constraintVertical_bias="0.514" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Repeticiones"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btn_ejerRun_comenzar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.203" />

                <TextView
                    android:id="@+id/tv_ejerun_tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ejerun_repeticiones"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.669"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ejedesc"
                    app:layout_constraintVertical_bias="0.426" />

                <TextView
                    android:id="@+id/tv_ejerun_repeticiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:padding="19dp"
                    android:text="0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="32dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ejedesc"
                    app:layout_constraintVertical_bias="0.934" />

                <TextView
                    android:id="@+id/tv_ejerRun_sensores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ejerun_repeticiones"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>